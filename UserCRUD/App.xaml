<Application x:Class="UserCRUD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UserCRUD"
             xmlns:vm="clr-namespace:ViewModelLib.ViewModels;assembly=ViewModelLib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPFMVVM.Core.ControlsLibrary;component/Themes/DefaultTheme.xaml"/>
                <ResourceDictionary Source="Languages/ko-KR.xaml"/>
                <ResourceDictionary Source="Themes/Font.xaml"/>
                <ResourceDictionary Source="Themes/Pages.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelManager x:Key="ViewModelManager"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
